# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.py]
indent_style = space
indent_size = 4

[*.{md,rst,txt}]
indent_style = space
indent_size = 4

[*.{ini,toml}]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{html,html.j2}]
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3

[Makefile]
indent_style = tab

[*.go]
indent_style = tab